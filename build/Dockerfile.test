# syntax=docker/dockerfile:1

# Test-builder stage with failpoints enabled
FROM golang:1.25-alpine AS builder

WORKDIR /src

RUN apk add --no-cache git ca-certificates build-base

# Install failpoint tool
RUN GOBIN=/usr/local/bin go install github.com/pingcap/failpoint/failpoint-ctl@latest

# Cache modules
COPY go.mod go.sum ./
RUN go mod download

# Copy the rest of the source
COPY . .

# Enable failpoints and build with tag
RUN failpoint-ctl enable && \
    CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
    go build -tags=failpoint -trimpath -ldflags="-s -w -extldflags=-static" -o /out/app ./cmd

############################################################
# Runtime stage with optional single failpoint injected via build-arg
FROM alpine:3.20

ARG FAILPOINT=""
ENV GO_FAILPOINTS=${FAILPOINT}

RUN apk add --no-cache ca-certificates tzdata && \
    adduser -D -g '' appuser && \
    mkdir -p /app

WORKDIR /app

COPY --from=builder /out/app /usr/local/bin/app
COPY configs/ ./configs/

ENV GO_ENV=test

EXPOSE 8081

USER appuser

ENTRYPOINT ["/usr/local/bin/app"]

